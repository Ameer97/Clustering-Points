@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@{
    ViewData["Title"] = "Home Page";
}

@if (SignInManager.IsSignedIn(User) && User.IsInRole("Clustering"))
{

    <img class="mt-5" src="/pictures/homePictuers.jpg" alt="HomePicture" />
}
else if (SignInManager.IsSignedIn(User) && User.IsInRole("Storage"))
{
    <style>
        .img {
            width: 109%;
        }
    </style>
    <img class="img" src="/pictures/storage1.jpg" alt="HomePicture" />
}
else
{
    <style>
        .img {
            width: 90%;
        }
    </style>
    <img class="img" src="/pictures/home.jpg" alt="home" />
}
